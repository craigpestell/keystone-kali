<!-- if helmet -->
{{#if helmet}}
<div class="container">
	<div class="row">
        <div class="col-sm-7">
			{{>hero-carousel helmet.gallery}}
		</div>
        <div class="col-sm-5">
            <h2>{{helmet.name}}</h2>
			{{safeString helmet.specs}}
        </div>
	</div>

</div>

{{else}}
	<!-- else -->
	<h3 class="text-muted">Helmet does not exist.</h3>
{{/if}}
