{{> nav-product-categories products}}
<!-- if product -->
{{#if product}}
    {{> product-blueimp-gallery-dom}}
    <div class="container">
		<div id="product-main" class="row">
			<div id="links" class="col-xs-12 col-md-7">
				{{#each product.gallery}}
					<a href="{{url}}" title="{{name}}" data-gallery>
						<img id="product-{{@index}}" src="{{{cloudinaryUrl width=635}}}" 
							 class="{{#unless @first}}img-responsive {{/unless}}image-toggle{{#unless @first}} lazyload{{/unless}}"
							 alt="{{name}}"{{#unless @first}} style="display:none;" {{/unless}}/>
					</a>
				{{/each}}
				<div class="text-right" style="height:0px;">
                    <img id="product-zoom-current" src="{{cloudinaryUrl @root.siteSettings.zoom-icon.imageValue width=40}}" style="margin-top:-100px;margin-right:75px"/>	
				</div>
                
				<div style="display: table;margin: 0 auto;">
				{{> product-gallery class="col-xs-12"}}
                </div>
			</div>
	
			<div class="col-md-5">
				
				
				<div class="col-xs-12">
					<h1>{{product.name}}</h1>
					<p class="lead">{{{product.description}}}</p>
					<div class="row">
						<div class="col-xs-12 initialism">
							{{{product.specs}}}
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12 initialism">
							{{{product.usageChart}}}
						</div>
					</div>
					{{#if product.technologiesAndFeatures.length}}
					<div class="row">
						{{#each product.technologiesAndFeatures}}
                            <img style="float:left;" class="lazyload img-responsive" src="{{{cloudinaryUrl iconImage width=70 height=70}}}"/>
						{{/each}}
					</div>
					{{/if}}
                    <div class="row">
                        <div class="col-xs-12"><a href="/dealers"><h3 style="color: go">Find a Dealer</h3></a></div>
                    </div>
                    <!--<div class="row">
                        <div class="col-xs-12">
                            <img id="product-zoom-current" src="{{cloudinaryUrl @root.siteSettings.zoom-icon.imageValue width=40}}"/>
                        </div>
                    </div>-->
				</div>
			</div>
        </div>
		<div class="product-section-nav-wrapper" style="min-height:65px">
			<div class="container product-section-nav" style="height:50px">
				<div class="col-xs-12 text-center text-uppercase" style="position:relative;">
					<ul>
						{{#if product.technologies}}<li><a class="nav-anchor" href="#technology">Technology</a></li>{{/if}}
						{{#if product.features}}<li><a class="nav-anchor" href="#features">Features</a></li>{{/if}}
						<li><a class="nav-anchor" href="#product-sizing-guide">Sizing</a></li>
					</ul>
                    <ul style="position:absolute;right:0;top:0;">
                        <li><a class="nav-anchor" href="#nav-main">{{product.name}}</a></li>
                    </ul>
				</div>
			</div>
        </div>
		<div id="technology">
		{{#each product.technologiesAndFeatures}}
    		{{> product-technology}}
		{{/each}}
        </div>
		{{> product-sizing-guide}}
    </div>
{{else}}
    <!-- else -->
    <h3 class="text-muted">Product does not exist.</h3>
{{/if}}
