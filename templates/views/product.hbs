{{> nav-product-categories products subCategory=subCategory}}

{{#if product}}
	{{> product-blueimp-gallery-dom}}
    <div class="container">
        <div id="product-main" class="row">
            <div id="links" class="col-xs-12 col-md-6">
				{{#each product.gallery}}
                    <a href="{{cloudinaryUrl this width=1170 background="#FFFFFF" format="jpg" fetch_format="auto"}}"
                       title="{{name}}" data-gallery>
                        <img data-src="{{cloudinaryUrl width="auto" format="jpg" fetch_format="auto"}}"
                             class="cld-responsive image-toggle"
                             id="product-{{@index}}" alt="{{name}}"{{#unless @first}}
                             style="display:none;" {{/unless}}/>
                    </a>
				{{/each}}
                <div class="hidden-xs text-right" style="height:0px;">
                    <img id="product-zoom-current"
                         src="{{cloudinaryUrl @root.siteSettings.zoom-icon.imageValue width=40 format="jpg" fetch_format="auto"}}"
                         style="margin-top:-100px;margin-right:75px"/>
                </div>
				{{> product-gallery class="col-xs-12"}}
            </div>

            <div class="col-md-6">
                <div class="col-xs-12">
					<div class="product-title">
                    	<h1>{{product.name}}</h1>
                    </div>
                    <div class="product-description">
                        <p>{{{product.description}}}</p>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 initialism">
							{{{product.specs}}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 initialism">
							{{{product.usageChart}}}
                        </div>
                    </div>
