<div class="section" style="background-color:{{#if heroColor}}{{heroColor}}{{else}}#FFF{{/if}};">
	<div class="container">
		<a href="/{{this.mainCategory.slug}}/{{this.subCategory.slug}}/{{this.slug}}">
			<div class="col-xs-12 col-sm-6 col-md-7">
				<img data-src="{{cloudinaryUrl gallery.[0] width="auto" fetch_format="auto"
											   quality="auto"}}" class="cld-responsive" src=""
					 style="z-index:1;position:relative"/>
				<img data-src="{{{cloudinaryUrl @root.siteSettings.hero-drop-shadow.imageValue width="auto"
												fetch_format="auto" quality="auto"}}}" class="cld-responsive" src=""
					 style="margin-top:-20%;z-index:1;"/>
			</div>
		</a>
		<div class="col-xs-12 col-sm-6 col-md-5 ">
			<div class="row">
				<div class="col-xs-12">
					<a href="/{{this.mainCategory.slug}}/{{this.subCategory.slug}}/{{this.slug}}">
						<div class="product-title"><h2>{{name}}</h2></div>
					</a>
				</div>
			</div>
			{{#if heroBlurb}}
				<div class="row">
					<div class="col-xs-12">
						<h3>{{{heroBlurb}}}</h3>
					</div>
				</div>
			{{/if}}
			<div class="row">
				<div class="col-xs-12">
					<p>{{{description}}}</p>
				</div>
			</div>
			{{#if technologies.length}}
				<div class="row">
					<div class="col-xs-12">
						<div class="technology">
							<h3>Technology</h3>
							<div class="row">
								{{#each technologies}}
									<div class=" col-xs-3 alpha" style="padding:10px;margin:5px;">
										<a href="/technology#{{slug}}">
											<img data-src="{{{cloudinaryUrl iconImage width="auto" fetch_format="auto" quality="auto"}}}"
												 src=""/>
										</a>
									</div>
								{{/each}}
							</div>
							{{#each features}}
								<img data-src="{{{cloudinaryUrl iconImage width="auto" fetch_format="auto" quality="auto"}}}"
									 src=""/>
							{{/each}}
						</div>
					</div>
				</div>
			{{/if}}
			<div class="row">
				<div class="col-xs-6 col-sm-12 col-md-6">
					<a href="" target="_blank">
						<div class="col-xs-12 text-center buy-button" data-shopifyid-us="{{shopifyIdUS}}" data-shopifyid-can="{{shopifyIdCan}}" style="display:none">
							buy now
						</div>
					</a>
				</div>
				
				<div class="col-xs-6 col-sm-12 col-md-6">
					<a href="/{{this.mainCategory.slug}}/{{this.subCategory.slug}}/{{this.slug}}">
						<div class="col-xs-12 more-info text-center">
							more info
						</div>
					</a>
				</div>
			</div>
			<div class="row"></div>
			<div class="col-xs-12 hidden-xs">
				<a href="/{{this.mainCategory.slug}}/{{this.subCategory.slug}}/{{this.slug}}">
					<div class="row">
						{{#each gallery}}
							{{#ifCond @index "<=" ../homeSlideAlternateEnd}}
								{{#ifCond @index ">=" ../../homeSlideAlternateStart}}
									<div class="col-xs-6">
										<img data-src="{{cloudinaryUrl width="auto" fetch_format="auto" quality="auto"}}"
											 class="cld-responsive" src=""/>
									</div>
								{{/ifCond}}
							{{/ifCond}}
						{{/each}}
					</div>
				</a>
			</div>
		</div>
		
	</div>
</div>
