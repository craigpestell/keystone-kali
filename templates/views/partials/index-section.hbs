<div class="section" style="background-color:{{#if heroColor}}{{heroColor}}{{else}}#000{{/if}};padding: 15px 0;">
	<div class="container">
		<a href="/{{this.mainCategory.slug}}/{{this.subCategory.slug}}/{{this.slug}}">
			<div class="col-xs-12 col-sm-7">
				<img data-src="{{cloudinaryUrl heroImage width="auto" format="jpg" fetch_format="auto"
											   quality="auto"}}" class="cld-responsive" src=""
					 style="z-index:10;position:relative"/>
				<img data-src="{{{cloudinaryUrl @root.siteSettings.hero-drop-shadow.imageValue width="auto"
												fetch_format="auto" quality="auto"}}}" class="cld-responsive" src=""
					 style="margin-top:-20%;z-index:1;"/>
			</div>
		</a>
		<div class="col-xs-12 col-sm-5">
			<div class="row">
				<div class="col-xs-12">
					<a href="/{{this.mainCategory.slug}}/{{this.subCategory.slug}}/{{this.slug}}">
						<div class="product-title"><h2>{{name}}</h2></div>
					</a>
				</div>
			</div>
			{{#if heroBlurb}}
				<div class="row">
					<div class="col-xs-12">
						<h3>{{{heroBlurb}}}</h3>
					</div>
				</div>
			{{/if}}
			<div class="row">
				<div class="col-xs-12">
					<p>{{{description}}}</p>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12">

					<h3 class="technology">Technology</h3>
					{{#if technologies.length}}

						<div class="technology">
							{{#each technologies}}
								<a href="/technology#{{slug}}">
									<img src="{{{cloudinaryUrl iconImage width=70 fetch_format="auto" quality="auto"}}}"
										 width="70"/>
								</a>
							{{/each}}
							{{#each features}}
								<img src="{{{cloudinaryUrl iconImage width=70 fetch_format="auto" quality="auto"}}}"
									 width="70"/>
							{{/each}}

						</div>
					{{/if}}
				</div>
			</div>
			<div class="row">
				<div class="col-xs-5">
					<a href="/{{this.mainCategory.slug}}/{{this.subCategory.slug}}/{{this.slug}}">
						<div class="col-xs-12 more-info text-center">
							<div class="more-info">more info</div>
						</div>
					</a>
				</div>
				<div class="col-xs-7">
					<div class="col-xs-12 text-center buy-button">
						<div class="buy-button">buy now</div>
					</div>
				</div>
			</div>
			{{#if heroWireImage.url}}
				<div class="row">
					<div class="col-xs-7"></div>
					<div class="col-xs-5">
						<img data-src="{{cloudinaryUrl heroWireImage width="auto" format="jpg"
													   fetch_format="auto" quality="auto"}}"
							 class="cld-responsive" src=""/>
					</div>
				</div>
			{{/if}}
		</div>
	</div>
</div>
