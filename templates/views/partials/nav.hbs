<nav id="nav-main" class="navbar navbar-static-top" role="navigation">
    <div class="container-fluid">
		<div class="col col-lg-1 visible-lg hidden-xl">&nbsp;
		</div>
		<div class="col col-xl-2 visible-xl">&nbsp;
		</div>
		<div class="col col-sm-12 col-lg-10 col-xl-8">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-main">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="/">
					<div class="navbar-logo" style="background: url({{cloudinaryUrl siteSettings.nav-logo-large.imageValue format="jpg" width=150 }}); background: url({{cloudinaryUrl siteSettings.nav-logo-large.imageValue width=150 }});background-size: 150px 50px;"></div>
				</a>
			</div>
			<div class="collapse navbar-collapse" id="navbar-collapse-main">
			<ul class="nav navbar-nav">
				{{#each navLinks}}
					{{#unless positionRight}}
						<li class="{{#ifeq key @root.page}} active{{/ifeq}}{{#if active}} active{{/if}}{{#ifeq label "Technology"}}{{#if @root.params.discipline.slug}} hidden-sm{{/if}}{{/ifeq}} "><a href="{{href}}">{{label}}</a></li>
					{{/unless}}
				{{/each}}
			</ul>
	
			{{#unless @root.params.discipline.slug}}
				<ul class="nav navbar-nav navbar-right ">
					{{#each navLinks}}
						{{#if positionRight}}
							{{#if discipline}}
								<li class="{{#ifeq key @root.params.discipline.slug}} hidden-xs active{{/ifeq}}">{{../../page}}<a href="{{href}}">{{label}}</a></li>
							{{else}}
								<li class="{{#ifeq key ../../page}} active{{/ifeq}}">{{../../page}}<a href="{{href}}">{{label}}</a></li>
							{{/if}}
						{{/if}}
					{{/each}}
				</ul>
			{{else}}
				<ul class="nav navbar-nav navbar-right">
						{{#each navLinks}}
							{{#if discipline}}
								{{#ifeq key @root.params.discipline.slug}}
								{{else}}
									<li>{{../../page}}<a href="{{href}}"{{#if _blank}} target="_blank"{{/if}}>{{label}}</a></li>
								{{/ifeq}}
							{{/if}}
						{{/each}}
						
						{{#each navLinks}}
							{{#if @last}}
								<li class="{{#ifeq key ../../page}} active{{/ifeq}}"><a href="{{href}}">{{label}}</a></li>
							{{/if}}
						{{/each}}
						
					</li>
				</ul>	
			{{/unless}}
			
			</div>
		</div>
	</div>
</nav>
