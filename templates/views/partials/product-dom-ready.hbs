<script type="text/javascript">
    $(document).ready(function () {
		
        var ecwidCanProductId = "{{product.ecwidCanProductId}}" || null;
        var ecwidUkProductId = "{{product.ecwidUkProductId}}" || null;
        var ecwidUsProductId = "{{product.ecwidUsProductId}}" || null;
				
		if(ecwidCanProductId) {
			$.ajax({
				url:'/cf-ipcountry',
				success: function(result){
					console.log(result);
					if(result.country == "CA") {
						$('#rowEcwidCan').show();
					}
				}
			});
		}
		
		var lazyLoad = function(el){
            var dataSrcSet = $(el).data('srcset');
            //console.log('data-src',dataSrcSet);
            if(dataSrcSet) {
                $(el).attr('srcset', dataSrcSet);
            }
		};

        var onImgLoad = function(selector, callback){
            $(selector).each(function(){
                if (this.complete || /*for IE 10-*/ $(this).height() > 0) {
                    callback.apply(this);
                }
                else {
                    $(this).one('load', function(){
                        callback.apply(this);
                    });
                }
            });
        };
		onImgLoad('#product-0', function(){
            $('source').each(function(){
                lazyLoad(this);
            });
            $('.gallery-icon:not(.cld-responsive)').addClass('cld-responsive');
            $.cloudinary.responsive();
        });
		
