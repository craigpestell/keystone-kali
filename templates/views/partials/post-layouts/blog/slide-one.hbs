
<div class="row product-main" style="">
	<div data-ks-editable="{{#if ../user}}{{adminEditableUrl ../../user _id}}{{/if}}" class="post">
		<h3><a href="{{postUrl key}}">{{{name}}}</a></h3>
		<!--<p class="lead text-muted">{{{categoryList categories prefix="Posted in "}}}
			{{#if author.name.first}}by {{author.name.first}}{{/if}}
					</p>-->
		{{{content.brief}}}
		
	{{#if @root.params.discipline}}
	<a href="/{{product.mainCategory.slug}}/{{product.subCategory.slug}}/{{product.slug}}">
	{{else}}
	<a href="//{{canonicalDiscipline.slug}}.{{@root.domainAndPort}}/{{product.mainCategory.slug}}/{{product.subCategory.slug}}/{{product.slug}}">
	{{/if}}
	<div class="col col-xs-12 col-sm-6 col-md-7">
		<H1>SLIDE ONE</H1>
		{{#if youtube}}
			<div class="embed-responsive embed-responsive-16by9">
				<iframe class="embed-responsive-item" src="{{youtube}}"  allowfullscreen="allowfullscreen"></iframe>
			</div>
		{{else}}
		
			<img data-src="{{cloudinaryUrl product.gallery.[0] width="auto" fetch_format="auto"
										   quality="auto"}}" class="cld-responsive" src=""
				 style="z-index:2;position:relative;"/>
			{{#unless darkColor}}
				<img data-src="{{{cloudinaryUrl @root.siteSettings.hero-drop-shadow.imageValue width="auto"
												fetch_format="auto" quality="auto"}}}" class="cld-responsive" src=""
					 style="margin-top:-20%;z-index:1;position:relative;"/>
			{{/unless}}
		{{/if}}

	</div>
	</a>

	<div class="col col-xs-12 col-sm-6 col-md-5 ">
		<div class="row">
			<div class="col col-xs-12">
				{{#if @root.params.discipline}}
				<a href="/{{product.mainCategory.slug}}/{{product.subCategory.slug}}/{{product.slug}}">
				{{else}}
				<a href="//{{canonicalDiscipline.slug}}.{{@root.domainAndPort}}/{{product.mainCategory.slug}}/{{product.subCategory.slug}}/{{product.slug}}">
				{{/if}}
				<div class="product-title"><h2>{{product.name}}</h2></div>
			</a>
			</div>
		</div>
		{{#if product.heroBlurb}}
			<div class="row">
				<div class="col col-xs-12">
					<h3>{{{product.heroBlurb}}}</h3>
				</div>
			</div>
		{{/if}}
		<div class="row">
			<div class="col col-xs-12">
				{{#if content.markdown.html}}
					{{{content.markdown.html}}}
				{{else}}
					{{{content.extended}}}
				{{/if}}
			</div>
		</div>
		{{#if product.technologies.length}}
			<div class="row technology">
				<div class="col col-xs-12">
					<h3 class="slide-label">Technology</h3><div style="clear:both;"></div>
				</div>
			</div>
			<div class="row technology">
				{{#each product.technologies}}
					<div class="col col-xs-3">
						<a href="//{{../../canonicalDiscipline.slug}}.{{@root.domainAndPort}}/technology#{{slug}}">
							{{#if rawIconImage}}
								{{{rawIconImage}}}
							{{else}}
								{{#if flatIconImage.url}}
									<img data-src="{{{cloudinaryUrl flatIconImage fetch_format="auto" }}}"
										 src="" class="cld-responsive"/>
								{{else}}
									<img data-src="{{{cloudinaryUrl iconImage fetch_format="auto" }}}"
										 src="" class="cld-responsive"/>

								{{/if}}
							{{/if}}
						</a>
					</div>
				{{/each}}

				{{#each features}}
					<img data-src="{{{cloudinaryUrl iconImage width="auto" fetch_format="auto" quality="auto"}}}"
						 src="" class="cld-responsive"/>
				{{/each}}

			</div>
		{{/if}}
		<div class="row">
			<div class="col col-xs-6 col-sm-12 col-md-6">
				<a href="" target="_blank">
					<div class="col col-xs-12 text-center buy-button" data-shopifyid-us="{{product.shopifyIdUS}}" data-shopifyid-can="{{product.shopifyIdCan}}" style="display:none">
						buy now
					</div>
				</a>
			</div>
			
			<div class="col col-xs-6 col-sm-12 col-md-6">
				{{#if @root.params.discipline}}
				<a href="/{{product.mainCategory.slug}}/{{product.subCategory.slug}}/{{product.slug}}">
				{{else}}
				<a href="//{{product.canonicalDiscipline.slug}}.{{@root.domainAndPort}}/{{product.mainCategory.slug}}/{{product.subCategory.slug}}/{{product.slug}}">
				{{/if}}
				<div class="col col-xs-12 more-info text-center">
					more info
				</div>
				</a>
			</div>
		</div>
		{{#if product}}
		<div class="row"></div>
		<div class="col col-xs-12 hidden-xs">
			<a href="/{{product.mainCategory.slug}}/{{product.subCategory.slug}}/{{product.slug}}">
				<div class="row">
					{{#each galleryImages}}
						<div class="col col-xs-6">
							<img data-src="{{cloudinaryUrl  width="auto" fetch_format="auto" quality="auto"}}"
								 class="cld-responsive" src=""/>
						</div>
					
					{{/each}}
				</div>
			</a>
		</div>
		{{/if}}
	</div>
	{{#if post.youtube}}
		<div class="embed-responsive embed-responsive-16by9">
			<iframe class="embed-responsive-item" src="{{post.youtube}}"  allowfullscreen="allowfullscreen"></iframe>
		</div>
	{{/if}}
	<p class="read-more"><a href="{{postUrl key}}">Read more...</a></p>
</div>
{{> blog-social post=this}}
</div>
