<div class="row">
	<div class="col col-xs-12">
		{{#if content.markdown.html}}
			{{{content.markdown.html}}}
		{{else}}
			{{{content.extended}}}
		{{/if}}
	</div>
	{{#if youtube}}
	<div class="col col-xs-12">
		<div class="embed-responsive embed-responsive-16by9">
			<iframe class="embed-responsive-item" src="{{youtube}}"  allowfullscreen="allowfullscreen"></iframe>
		</div>
	</div>
	{{/if}}
	{{#if gallery}}
		<div class="col col-xs-12">
			{{#each gallery}}
				<img data-src="{{{cloudinaryUrl width="auto" fetch_format="auto" quality="auto"}}}"
					 src="" class="cld-responsive"/>
			{{/each}}
		</div>
		
	{{/if}}
</div>
