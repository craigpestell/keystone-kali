<div class="container">
    <h1>Helmet</h1>
</div>
<div class="container">
    <!-- if helmets -->
	{{{json helmet}}}
	categories: {{categories}}<br/>
    relCategories: {{relCategories}}
	<h2>{{name}}
		<div class="pull-right text-muted">19th May 2014</div>
	</h2>
	<div class="row helmet-images">
		{{json helmet}}
		{{#if heroImage}}
			<div class="col-sm-4 col-md-4 helmet-image">
				<img src="{{cloudinaryUrl heroImage width='680' height='680'}}" class="img-rounded">
			</div>
		{{/if}}
		<div class="col-sm-8 col-md-8">
			<div class="row">
				{{#each images}}
					<div class="col-xs-4 col-sm-4 col-md-3 helmet-image">
						<img src="{{cloudinaryUrl width='300' height='300'}}" class="img-rounded">
					</div>
				{{/each}}
			</div>
		</div>
	</div>
</div>
