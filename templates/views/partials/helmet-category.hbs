<!-- if helmets -->
<div class="container helmets">
{{#if helmets}}
{{#each helmets}}
	<div class="row">
		<div class="col-sm-6">
			<a href="{{this.url}}">
				<img class="img-responsive" src="{{this.heroImage.url}}"/>
			</a>
		</div>
		<div class="col-sm-6">
			<h2>{{this.name}}</h2>
			{{safeString this.specs}}
		</div>
	</div>
{{/each}}
{{else}}
	<!-- else -->
	<h3 class="text-muted">No helmets exist.</h3>
{{/if}}
</div>
