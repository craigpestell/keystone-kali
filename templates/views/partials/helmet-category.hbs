<!-- if helmets -->
<div class="container helmets">
	
{{#if helmets}}
{{#each helmets.subCategories}}
	<div class="row"><div id="{{slug}}" class="col-sm-12" style="margin-top:-100px;padding-top:100px;"><h2>{{slug}}</h2></div></div>
	{{#each helmets}}
	<div class="row">
		<div class="col-sm-6">
			<a href="{{this.url}}">
				<img class="img-responsive" src="{{this.heroImage.url}}"/>
			</a>
		</div>
		<div class="col-sm-6">
			<h2>{{this.name}}</h2>
			{{safeString this.specs}}
		</div>
	</div>
	{{/each}}
{{/each}}
{{else}}
	<!-- else -->
	<h3 class="text-muted">No helmets exist.</h3>
{{/if}}
</div>
