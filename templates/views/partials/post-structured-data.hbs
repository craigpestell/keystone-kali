"@context": "http://schema.org",
"@type": "BlogPosting",
"mainEntityOfPage":{
"@type":"WebPage",
"@id":"{{postUrl this}}"
},
"headline": "{{{name}}}",
"image": {
"@type": "ImageObject",
"url": "{{cloudinaryUrl mainImage width=700}}",
"width": 700
},
"datePublished": "{{date publishedDate format='YYYY-MM-DD'}}",
