"@type": "Organization",
"name": "Kali Protectives"
},
"publisher": {
"@type": "Organization",
"name": "Kali Protectives Inc",
"logo": {
"@type": "ImageObject",
"url": "http://applefostering.co.uk/apple-logo-schema/",
"width": 550,
"height": 60
}
},
"description": "{{content.brief}}",
"articleBody": "{{content.extended}}"
}

