<div class="product-category-item">
    <a href="/{{#if @root.params.version}}archive/{{@root.params.version.slug}}/{{/if}}{{this.mainCategory.slug}}/{{this.subCategory.slug}}/{{this.slug}}">
        <div class="product-category-href" data-href="/{{this.mainCategory.slug}}/{{this.subCategory.slug}}/{{this.slug}}">
			<div class="product-category-image">
				{{{cloudinaryImg this.gallery.[0] width=400 alt=name}}}
			</div>
            <div class="title">
				<h4>{{this.name}}</h4>				
			</div>
            <div class="description">
                {{{shortDescription}}}
            </div>
        </div>
    </a>
</div>
