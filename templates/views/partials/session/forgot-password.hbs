<form method="post" action="/forgot-password" role="password-retrieval" novalidate="novalidate" class="form-password auth-form">
	<input type="hidden" name="action" value="forgot-password">
	<div class="form-groups">
		<div class="form-group">
			<label for="email" class="sr-only">Email address</label>
			<input type="email" name="email" id="email" placeholder="Email address" class="form-control form-control--first form-control--last">
		</div>
	</div>
	<button type="submit" data-loading-text="Sending..." class="btn btn-block btn-primary btn-submit">Send reset link</button>
</form>
<p class="text-center text-muted mt-3">I remember, <a href="javascript:;" rel="modal-pane" data-modal-pane="signin">sign in</a></p>
