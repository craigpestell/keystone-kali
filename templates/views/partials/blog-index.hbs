<!--blog-index-->
<div id="blog-index">
	<div id="blog-columns" data-columns class="row">
	{{#each data.posts}}
		<a href="/republik/post/{{key}}">
			<div class="blog-index-item">
				<div class="blog-main-image">
					<img data-src="{{cloudinaryUrl mainImage width="auto" fetch_format="auto"}}" class="cld-responsive" src=""/>
				</div>
				<h3>{{name}}</h3>
				<div class="blog-main-content">
					{{{content.brief}}}
				</div>
				<hr/>
			</div>
		</a>
	{{/each}}
	</div>
</div>
