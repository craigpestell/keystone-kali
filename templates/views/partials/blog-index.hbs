<!--blog-index-->
{{#each data.posts.results}}
	<div class="row visible-xs">
		<div class="col col-xs-12">
			<div class="blog-index-item">
				<a href="/republik/post/{{key}}">
					<div class="">
						<img data-src="{{cloudinaryUrl mainImage width="auto" fetch_format="auto"}}" class="cld-responsive" src=""/>
					</div>
					<h3>{{name}}</h3>
					<div class="blog-main-content">
						{{{content.brief}}}
					</div>
				</a>
				<hr/>
			</div>
		</div>
	</div>
{{/each}}

{{#everyNth data.posts.results 3}}
	{{#if isModZeroNotFirst}}
		</div>
	{{/if}}
	{{#if isModZero}}
		<div class="row hidden-xs">
	{{/if}}
		<div class="col col-sm-4">
			<div class="blog-index-item">
				<a href="/republik/post/{{key}}">
					<div class="blog-main-image">
						<img data-src="{{cloudinaryUrl mainImage width="auto" fetch_format="auto"}}" class="cld-responsive" src=""/>
					</div>
					<h3>{{name}}</h3>
					<div class="blog-main-content">
						{{{content.brief}}}
					</div>
				</a>
				<hr/>
			</div>
		</div>
	{{#if isLast}}
		</div>
	{{/if}}
{{/everyNth}}
<!--//end blog-index-->
