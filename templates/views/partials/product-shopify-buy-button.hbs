<div id='product-component-00e6544e425'></div>
<script type="text/javascript">
	/*<![CDATA[*/
	$(document).ready(function () {
		var shopifyButton = function (domain, apiKey, shopifyId) {
			var scriptURL = 'https://sdks.shopifycdn.com/buy-button/latest/buy-button-storefront.min.js';
			if (window.ShopifyBuy) {
				if (window.ShopifyBuy.UI) {
					ShopifyBuyInit();
				} else {
					loadScript();
				}
			} else {
				loadScript();
			}

			function loadScript() {
				var script = document.createElement('script');
				script.async = true;
				script.src = scriptURL;
				(document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(script);
				script.onload = ShopifyBuyInit;
			}

			function ShopifyBuyInit() {
				var client = ShopifyBuy.buildClient({
					domain: domain + '.myshopify.com',
					apiKey: apiKey,
					appId: '6',
				});

				ShopifyBuy.UI.onReady(client).then(function (ui) {
					ui.createComponent('product', {
						id: [shopifyId],
						node: document.getElementById('shopify-buy-now-' + domain),
						moneyFormat: '%24%7B%7Bamount%7D%7D',
						options: {
							"product": {
								"buttonDestination": "checkout",
								"variantId": "all",
								"width": "240px",
								"contents": {
									"img": false,
									"title": false,
									"variantTitle": false,
									"price": false,
									"description": false,
									"buttonWithQuantity": false,
									"quantity": false
								},
								"text": {
									"button": "BUY NOW"
								},
								"styles": {
									"product": {
										"text-align": "left",
										"@media (min-width: 601px)": {
											"max-width": "100%",
											"margin-left": "0",
											"margin-bottom": "50px"
										}
									},
									"button": {
										"background-color": "#4cbb17",
										":hover": {
											"background-color": "#44a815"
										},
										":focus": {
											"background-color": "#44a815"
										}
									},
									"title": {
										"font-size": "26px"
									},
									"price": {
										"font-size": "18px"
									},
									"compareAt": {
										"font-size": "15px"
									}
								}
							},
							"cart": {
								"contents": {
									"button": true
								},
								"styles": {
									"footer": {
										"background-color": "#ffffff"
									}
								}
							},
							"modalProduct": {
								"contents": {
									"variantTitle": false,
									"buttonWithQuantity": true,
									"button": false,
									"quantity": false
								},
								"styles": {
									"product": {
										"@media (min-width: 601px)": {
											"max-width": "100%",
											"margin-left": "0px",
											"margin-bottom": "0px"
										}
									}
								}
							},
							"productSet": {
								"styles": {
									"products": {
										"@media (min-width: 601px)": {
											"margin-left": "-20px"
										}
									}
								}
							}
						}
					});
				});
			}
		};

		var shopifyIdCan = "{{product.shopifyIdCan}}" || null;
		var shopifyIdUS = "{{product.shopifyIdUS}}" || null;

		if (shopifyIdCan || shopifyIdUS) {
			$.ajax({
				url: '/cf-ipcountry',
				success: function (result) {
					console.log(result);
					if (result.country == "CA") {
						shopifyButton("kali", "3e327001331e481f2be66f85eba4c4f8", shopifyIdCan);
						$('#rowShopifyCan').show();
					}
					if (result.country == "US") {
						shopifyButton("kali-usa", "7ae67513f9d1aca4d7f349ba6580e436", shopifyIdUS);
						$('#rowShopifyUS').show();
					}
				}
			});
		}
	});
	/*]]>*/
</script>
