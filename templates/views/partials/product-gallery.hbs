{{# ifCond product.gallery.length '>' 1}}
    
    <div class="{{class}}">
        <div class="row" style="margin-top: 5px; margin-bottom: 15px;">
            <div class="col-xs-12" style="text-align:center">
				{{#everyNth product.gallery product.imagesPerColorSwatch}}
				{{#if isModZeroNotFirst}}
					</div>
				{{/if}}
				{{#if isModZero}}
					<div id="product-icon-{{n}}" class="product-icon-group icon-toggle" style="text-align:center;{{#unless isFirst}}display:none;{{/unless}}">
						{{#with (lookup ../../product.galleryColorwaysArray page)}}
                            <div class="product-swatch-title">{{colorway}}</div>
						{{/with}}
				{{/if}}
				{{#if isLast}}
					</div>
				{{/if}}
				{{/everyNth}}
        	</div>
    	</div>
	
	
	</div>
    
{{/ifCond}}


{{# ifCond product.imagesPerColorSwatch '>' 1}}
	<div class="row" style="margin-bottom: 15px;">
		<div class="col col-xs-1"></div><div class="col col-xs-10">
<div class="product-gallery-carousel owl-carousel owl-theme">
{{# each product.gallery}}
		<div data-image-id="#product-{{@index}}" class="image-toggler">
			{{{cloudinaryImg this width="100"}}}
		</div>
{{/each}}
</div>
		</div>
		<div class="col col-md-1"></div>
	</div>
{{/ifCond}}

{{> product-color-swatches visibleClass="visible-xs visible-sm" align="center"}}
