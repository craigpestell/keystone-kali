<div id="hero-carousel-{{../slug}}" class="carousel slide" data-ride="carousel" data-interval="4000">
	<!-- Indicators -->
	<ol class="carousel-indicators">
		{{#each this}}
			<li data-target="#hero-carousel-{{../slug}}" data-slide-to="{{@index}}"
				class="{{#if @first}} active{{/if}}">
			</li>
		{{/each}}
	</ol>
	<div class="carousel-inner">
		{{#each this}}
			<div class="item{{#if @first}} active{{/if}} row">
				<img src="{{url}}" class="img-responsive" alt="{{name}}">
				<h4>
					<small>{{name}}</small>
				</h4>
			</div><!-- End Item -->
		{{/each}}
	</div><!-- End Carousel Inner -->
</div><!-- /.carousel -->
