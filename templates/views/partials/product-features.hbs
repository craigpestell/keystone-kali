<div class="container-fluid" style="padding: 60px 0;background-color: lightgrey">
	<div class="row">
		<div class="col col-md-2"></div>
		<div class="col col-xs-6 col-md-4 text-center"><H1>Features</H1></div>
	</div>
	<div class="row">
		<div class="col col-md-2"></div>
		<div class="col col-xs-6 col-md-4 text-center">
	{{#each product.features}}
		<div class="col-xs-2" data-feature-key="{{key}}">
				<img data-src="{{{cloudinaryUrl iconImage width="auto" fetch_format="auto" quality="auto"}}}" src="" class="cld-responsive"/>
		</div>
	{{/each}}
	</div>
	{{#each product.features}}
		<div class="col-xs-1" data-feature-key="{{key}}">
		<h4>{{{name}}}</h4>
		<p>{{{description}}}</p>
		</div>
	{{/each}}


	</div>
	
</div>
