<div class="container">
	<div class="row">
		<div class="col-sm-6">
            <img data-src="{{cloudinaryUrl data.page.heroImage width="auto" format="jpg"}}" class="cld-responsive" style="margin-bottom:15px"/>
        </div>
		<div class="col-sm-6">
			{{{data.page.contentHtml}}}
        </div>
	</div>

	
		{{#each technology}}
		<div class="row">
		{{#everyOther @index 2}}
        	<div class="col-xs-6 " style="padding-right:0"><img data-src="{{cloudinaryUrl heroImage width="auto" format="jpg"}}" class="cld-responsive"/></div>
	
			<div class="col-xs-6" style="padding-top: 15px">
				<h3>{{{name}}}</h3>
				<p>{{{description}}}</p>
			</div>
		{{else}}
        
			<div class="col-xs-6" style="padding-top: 15px">
				<h3>{{{name}}}</h3>
				<p>{{{description}}}</p>
			</div>
		
			<div class="col-xs-6 " style="padding-left:0"><img data-src="{{cloudinaryUrl heroImage width="auto" format="jpg"}}" class="cld-responsive"/></div>
	
		{{/everyOther}}
        </div>
		{{/each}}
	
</div>
