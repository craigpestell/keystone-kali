{{!< default}}
<div class="container">
	<div class="row">
		<div class="col-sm-6">
			<img src="{{cloudinaryUrl data.page.heroImage width=570}}" class="img-responsive">
        </div>
		<div class="col-sm-6">
			{{{data.page.contentHtml}}}
        </div>
	</div>


	<div class="row">
		{{#each technology}}
		{{#everyOther @index 2}}
			<div class="col-xs-6 product-technology" style="padding-right:0"><img class="img-responsive lazyload" src="{{{cloudinaryUrl heroImage width=570}}}"/></div>
	
			<div class="col-xs-6">
				<h3>{{{name}}}</h3>
				<p>{{{description}}}</p>
			</div>
	
		{{else}}
			<div class="col-xs-6">
				<h3>{{{name}}}</h3>
				<p>{{{description}}}</p>
			</div>
		
			<div class="col-xs-6 product-technology" style="padding-left:0"><img class="img-responsive lazyload" src="{{{cloudinaryUrl heroImage width=570}}}"/></div>
	
		{{/everyOther}}
		{{/each}}
	</div>
</div>
