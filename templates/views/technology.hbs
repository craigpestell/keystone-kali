<div class="container">
	<div class="row">
		<div class="col-sm-6">
			<img src="{{cloudinaryUrl data.page.heroImage width=700}}" class="img-responsive" style="margin-bottom:15px">
        </div>
		<div class="col-sm-6">
			{{{data.page.contentHtml}}}
        </div>
	</div>

	
		{{#each technology}}
		<div class="row">
		{{#everyOther @index 2}}
        	<div class="col-xs-6 " style="padding-right:0"><img class="img-responsive lazyload" src="{{{cloudinaryUrl heroImage width=570}}}"/></div>
	
			<div class="col-xs-6" style="padding-top: 15px">
				<h3>{{{name}}}</h3>
				<p>{{{description}}}</p>
			</div>
		{{else}}
        
			<div class="col-xs-6" style="padding-top: 15px">
				<h3>{{{name}}}</h3>
				<p>{{{description}}}</p>
			</div>
		
			<div class="col-xs-6 " style="padding-left:0"><img class="img-responsive lazyload" src="{{{cloudinaryUrl heroImage width=570}}}"/></div>
	
		{{/everyOther}}
        </div>
		{{/each}}
	
</div>
