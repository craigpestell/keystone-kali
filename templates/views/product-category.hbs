<!-- if products -->
{{#if products}}
	{{> nav-sub-categories navSubLinks}}
	{{#container}}
    <div class="products blog">
		{{#each products}}
			<div class="col-xs-12">
				<div class="product-category-title">
				{{#ifCond @root.params.discipline.slug "==" "moto"}}
					{{#ifCond ../name "==" "Full Face"}}
						<a id="{{slug}}" class="product-category-anchor"><h1>MX</h1></a>
					{{else}}
						<a id="{{slug}}" class="product-category-anchor"><h1>{{name}}</h1></a>
					{{/ifCond}}
				{{else}}
					<a id="{{slug}}" class="product-category-anchor"><h1>{{name}}</h1></a>
				{{/ifCond}}
				</div>
			</div>


			{{#each this.products}}
            {{> product-category-product}}
			{{/each}}
            
		{{/each}}
    </div>
	{{/container}}
{{else}}
    <!-- else -->
    <h3 class="text-muted">No products exist.</h3>
{{/if}}
