{{json postCategories}}<br/>
{{section}}
{{#ifCond section "==" "republik"}}
	<nav id="nav-republik" class="navbar navbar-static-top" role="navigation">
		<div class="container-fluid">
			<div class="col col-lg-2 visible-lg"></div>
			<div class="col col-sm-12 col-lg-8">
				<ul class="nav navbar-nav">
					{{#each postCategories}}
						<li class="{{#ifeq key @root.page}} active{{/ifeq}}{{#if active}} active{{/if}}"><a href="{{href}}">{{name}}</a></li>
					{{/each}}
				</ul>
			</div>
		</div>
	</nav>
	{{#container}}
		{{#each postCategories}}

		{{/each}}
	{{/container}}
{{/ifCond}}

{{#container}}
	<div class="row blog">
		<div class="col col-xs-3"></div>{{> blog-pagination}}
	</div>
	<div class="row">
		{{> blog-index}}
	</div>
{{/container}}
